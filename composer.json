{
    "name": "laraflow/plugin",
    "description": "This package will register and allow plugin management",
    "keywords": [
        "laraflow",
        "laravel",
        "plugin"
    ],
    "homepage": "https://github.com/laraflow/plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Hafijul Islam",
            "email": "hafijul233@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^11.0",
        "wikimedia/composer-merge-plugin": "^2.1"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "larastan/larastan": "^2.8",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Laraflow\\Plugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laraflow\\Plugin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laraflow\\Plugin\\PluginServiceProvider"
            ],
            "aliases": {
                "Plugin": "Laraflow\\Plugin\\Facades\\Plugin"
            }
        },
        "merge-plugin": {
            "include": [
                "plugins/*/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-replace": false,
            "merge-dev": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
